    <None Remove="Resources\MenuIcons\Graph\delete.png" />
    <None Remove="Resources\MenuIcons\Graph\direct_graph.png" />
    <None Remove="Resources\MenuIcons\Graph\dir_graph.png" />
    <None Remove="Resources\MenuIcons\Graph\move.png" />
