<Window x:Class="Main.Windows.About"
        ResxExtension.DefaultResxName="Main.Localization.About" Language="{UICulture}" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main.Windows"
        mc:Ignorable="d"
        Title="{Resx title}" Height="370" Width="367" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Height="345" Width="367" Margin="0,0,0,-6">
        <Grid Margin="0,-8,200,0">
            <Image RenderOptions.BitmapScalingMode="HighQuality" 
RenderOptions.EdgeMode="Aliased" Source="/Resources/banner.png" Height="370" VerticalAlignment="Top"/>
        </Grid>
        <TextBlock Margin="170,41,5,201" TextWrapping="WrapWithOverflow" TextAlignment="Center" Text="{Resx description}"></TextBlock>
        <Image RenderOptions.BitmapScalingMode="HighQuality" 
RenderOptions.EdgeMode="Aliased" Source="/Resources/github-logo.png" Cursor="Hand" MouseUp="GitHub_Click" Margin="174,285,131,12"/>
        <Image RenderOptions.BitmapScalingMode="HighQuality" 
RenderOptions.EdgeMode="Aliased" Source="/Resources/telegram-logo.png" Cursor="Hand" MouseUp="Telegram_Click" Margin="238,285,68,10"/>
    </Grid>

</Window>
